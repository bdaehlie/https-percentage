{

  "manifest_version": 2,
  "name": "HTTPS Percentage",
  "version": "1.0",

  "description": "Displays the percentage of network connections that use HTTPS while you browse the Web.",

  "permissions": [
    "<all_urls>",
    "webRequest",
    "idle",
    "storage"
  ],

  "icons": {
    "48": "icons/https-percentage-48.png"
  },

  "background": {
    "scripts": ["https-percentage.js"]
  },

  "browser_action": {
    "default_icon": "icons/https-percentage-32.png",
    "default_title": "HTTPS Percentage",
    "default_popup": "popup/popup.html",
    "browser_style": true
  }

}
